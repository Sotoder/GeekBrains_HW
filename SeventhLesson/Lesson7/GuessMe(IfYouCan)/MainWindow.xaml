<Window x:Name="GameForm" x:Class="GuessMe_IfYouCan_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessMe_IfYouCan_"
        mc:Ignorable="d"
        Title="Угадай число" Height="151" Width="150">
    <Grid Margin="0,0,0,-16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Name="tbAnswer" HorizontalAlignment="Center" Margin="0,46,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" TextAlignment="Center" KeyDown="tbAnswer_KeyDown" PreviewTextInput="tbAnswer_PreviewTextInput"/>
        <Button Name="btnGame" Content="Сыграем?" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click"/>
        <Button Name="btnFormForAnswer" Content="В форме" HorizontalAlignment="Center" Margin="0,76,0,0" VerticalAlignment="Top" Width="74" Click="btnFormForAnswer_Click"/>

    </Grid>
</Window>
